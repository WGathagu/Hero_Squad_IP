{{#partial "content"}}
    <div class="text-center m-5 fs-2">
        Register a New Hero
    </div>
    <div id="newHeroForm" class="bg-light">
            <form action="/heroes/new" method="post">
                <div class="form-group m-2">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" class="form-control" placeholder="Enter name of new squad" required>
                </div>
                <div class="form-group m-2">
                    <label for="cause">Cause</label>
                    <input type="text" id="cause" name="cause" class="form-control" placeholder="Enter cause of squad" min="0" required>
                </div>
                <div class="text-center form-group m-3">
                    <button class="btn btn-primary" type="submit">Submit</button>
                    <button class="btn btn-secondary" type="reset">Reset</button>
                </div>
            </form>
    </div>
{{/partial}}

