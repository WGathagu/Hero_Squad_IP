{{#partial "content"}}
    <div class="text-center m-5 fs-2 bg-primary">
        List of Heroes
    </div>
    <div class="text-center">
        <h2><u>{{hero.heroName}}</u></h2>

        <div class="row">
            <div class="col-md-4">
                <h5>Age</h5>
                <p>{{hero.heroAge}}</p>
            </div>
            <div class="col-md-4">
                <h5>Power</h5>
                <p>{{hero.heroSpecialPower}}</p>
            </div>
            <div class="col-md-4">
                <h5>Weakness</h5>
                <p>{{hero.heroWeakness}}</p>
            </div>
        </div>
        <a class="btn btn-outline-primary" href="/heroes/{{hero.heroID}}/update">Update</a>
        <a class="btn btn-outline-danger" href="/heroes/{{hero.heroID}}/remove">Delete</a>
    </div>
{{/partial}}

