{{#partial "content"}}
    <div class="text-center m-5 fs-2 bg-light">
        Register a New Hero
    </div>
    <div id="newHeroForm" class="bg-light">
        {{#if updateHero}}
            <form action="/heroes/{{updateHero.heroID}}/update" method="post">
                <div class="form-group m-2">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" class="form-control" value="{{updateHero.name}}" required>
                </div>
                <div class="form-group" m-2>
                    <label for="age">Age</label>
                    <input type="number" id="age" name="age" class="form-control" min="0" value="{{updateHero.age}}"
                           required>
                </div>
                <div class="form-group m-2">
                    <label for="power">Power</label>
                    <input type="text" id="power" name="power" class="form-control" value="{{updateHero.power}}"
                           required>
                </div>
                <div class="form-group m-2">
                    <label for="weakness">Weakness</label>
                    <input type="text" id="weakness" name="weakness" class="form-control"
                           value="{{updateHero.weakness}}"
                           required>
                </div>
                <div class="text-center form-group m-3">
                    <button class="btn btn-primary" type="submit">Submit</button>
                    <button class="btn btn-secondary" type="reset">Reset</button>
                </div>
            </form>
            </div>
        {{else}}
            <form action="/heroes/new" method="post">
                <div class="form-group m-2">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" class="form-control" placeholder="Enter name of hero" required>
                </div>
                <div class="form-group m-2">
                    <label for="age">Age</label>
                    <input type="number" id="age" name="age" class="form-control" placeholder="Enter age of hero" min="0" required>
                </div>
                <div class="form-group m-2">
                    <label for="power">Power</label>
                    <input type="text" id="power" name="power" class="form-control" placeholder="Enter power of hero" required>
                </div>
                <div class="form-group m-2">
                    <label for="weakness">Weakness</label>
                    <input type="text" id="weakness" name="weakness" class="form-control" placeholder="Enter weakness of hero" required>
                </div>
                <div class="text-center form-group m-3">
                    <button class="btn btn-primary" type="submit">Submit</button>
                    <button class="btn btn-secondary" type="reset">Reset</button>
                </div>
            </form>
        {{/if}}
    </div>
{{/partial}}

